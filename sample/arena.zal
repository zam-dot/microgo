@c {
    #include <stdio.h>
    #include <stdlib.h>
    #include <string.h>
}

func main() {
    @arena a = [0] 
    @arena b = [0, 0]
    
    print("a = %p\n", a)
    print("b = %p\n", b)
    print("Different addresses? %s\n", a != b ? "YES" : "NO")
    
    a[0] = 999
    print("a[0] = %d, b[0] = %d\n", a[0], b[0])  # Should be 999, 0
    
    b[0] = 111
    print("a[0] = %d, b[0] = %d\n", a[0], b[0])  # Should be 999, 111
}
